<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="20,40,20,20">
        
            <Label Text="Bill" />
            <Entry x:Name="txtBill" Keyboard="Numeric" />
            
            <Label Text="Tip" />
            <Entry x:Name = "txtTip" Keyboard="Numeric" />
            
            <Button Text="15%" Margin="0,50,0,10" Clicked="Fifteen_OnClicked"/>
            <Button Text="20%" Margin="0,50,0,20" Clicked="Twenty_OnClicked"/>
            <Button Text="25%" Margin="0,50,0,20" Clicked="TwentyFive_OnClicked"/>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
